                            "type": "string"
                        }
                    },
                    {
                        "name": "sort_direction",
                        "in": "query",
                        "description": "Sort direction (asc, desc)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The page number to retrieve",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Admin: Articles"
                ],
                "summary": "Create a new article",
                "description": "Creates a new article and returns its data.",
                "operationId": "storeAdminArticle",
                "requestBody": {
                    "description": "Article data payload",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "summary",
                                    "content",
                                    "category",
                                    "country"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Amazing New Article Title"
                                    },
                                    "summary": {
                                        "type": "string",
                                        "example": "A short and engaging summary of the article."
                                    },
                                    "content": {
                                        "type": "string",
                                        "example": "The full content of the article goes here..."
                                    },
                                    "category": {
                                        "type": "string",
                                        "example": "tech"
                                    },
                                    "country": {
                                        "type": "string",
                                        "example": "US"
                                    },
                                    "status": {
                                        "description": "Default is 'pending review'",
                                        "type": "string",
                                        "example": "pending review"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Article created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
