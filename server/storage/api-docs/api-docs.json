    "paths": {
        "/api/admin/analytics": {
            "get": {
                "tags": [
                    "Admin: Analytics"
                ],
                "summary": "Get aggregated analytics data",
                "description": "Returns overview stats, traffic trends, content by category, and performance by country based on a period filter.",
                "operationId": "getAdminAnalytics",
                "parameters": [
                    {
                        "name": "period",
                        "in": "query",
                        "description": "Filter range (7d, 30d, 3m, 6m, 1y)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "7d",
                            "enum": [
                                "7d",
                                "30d",
                                "3m",
                                "6m",
                                "1y"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "range": {
                                            "type": "string",
                                            "example": "7d"
                                        },
                                        "overview": {
                                            "properties": {
                                                "total_page_news": {
                                                    "type": "integer",
                                                    "example": 150
                                                },
                                                "unique_visitors": {
                                                    "type": "integer",
                                                    "example": 1200
                                                },
                                                "total_clicks": {
                                                    "type": "integer",
                                                    "example": 3500
                                                },
                                                "avg_engagement": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 4.52
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "traffic_trends": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "content_by_category": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "performance_by_country": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/admin/articles": {
