        "/api/redis-test": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Test Redis connection",
                "description": "Pings Redis and performs a SET/GET operation to verify connectivity",
                "operationId": "b7c9a488fc1314d5a27d660e7ddb1a2b",
                "responses": {
                    "200": {
                        "description": "Redis connection successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "connected"
                                        },
                                        "ping": {
                                            "type": "string",
                                            "example": "PONG"
                                        },
                                        "test_value": {
                                            "type": "string",
                                            "example": "Hello from Laravel! 2026-01-21 10:00:00"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "✅ Redis connection successful!"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Redis connection failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "❌ Redis connection failed"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Connection refused"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
