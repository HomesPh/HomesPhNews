# --- STORAGE CONFIGURATION ---
# Options: gcp, aws
STORAGE_PROVIDER=aws

# --- GOOGLE AI (Gemini) ---
GOOGLE_AI_API_KEY=your-gemini-api-key

# --- AWS S3 ---
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=your-bucket-name
AWS_FOLDER=your-folder-name

# --- GCP CLOUD STORAGE ---
GCP_BUCKET_NAME=your-bucket-name
# Option 1: Path to JSON file
GCP_SERVICE_ACCOUNT_JSON=service-account.json
# Option 2: Inline JSON (wrap in single quotes)
# GCP_SERVICE_ACCOUNT_JSON='{"type":"service_account",...}'

# --- REDIS ---
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=homesph:

# --- SCRAPER SETTINGS ---
# These are now configured in config.py
# You can override specific settings here if needed
# GOOGLE_NEWS_API_KEY=your-optional-key
